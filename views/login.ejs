<% layout('notloggedlayout') -%>

<div class="container-fluid" >
	<% if (message.length > 0) { %>
	<p><div class='alert alert-danger'> <%= message%></div></p>
	<% } %>
	<h1 id="titleblock" class="text-center">Rally</h1>
	<div class="row-fluid">
		<div class="col-md-12">
			<form action="/login" method="post" role="form" id="login-form">
				<div class="form-group">
					<!-- make new username/password -->
					<input type="text" class="form-control" name="username" id="nameField" placeholder="Username or email">
				</div>

				<div class="form-group">
					<input type="password" class="form-control" name="password" id="passwordField" placeholder = "Password">
				</div>


				<a id="forgotPass" href="#"> Forgot Password? </a><BR>
				<div id="forgotPassDiv" style="display:none">
					<p>Enter your email and we'll send you your password!</p>
					Email: <input type="text" id="emailField"> 
					<button type="button" id="emailButton" class="btn btn-primary">Send</button>
				</div>

				<span class="help-block">New to Rally? <a href="/signup">Sign up!</a></span>
				<button type="submit" id="loginButton" class="btn btn-block btn-success">Sign In</button>

				
			</form>
		</div>
	</div>
</div> <!--./container -->

