<% layout('notloggedlayout') -%>
<% if (message) { %>
<p><%= message %></p>
<% } %>
<div class="container-fluid" >

	<h1 id="titleblock" class="text-center"><i id="leaf" class="fa fa-leaf fa-1x"></i>Rally</h1>
	<div class="row-fluid">
		<div class="col-md-12">
			<form action="/login" method="post" role="form" id="login-form">
				<div class="form-group">
					<!-- make new username/password -->
					<input type="text" class="form-control" name="username" id="nameField" placeholder="Username or email">
				</div>

				<div class="form-group">
					<input type="password" class="form-control" name="password" id="passwordField" placeholder = "Password">
				</div>

				<div class="form-group">
					<div class="checkbox">
						<label>
							<input type="checkbox"> Remember me
						</label>
					</div>
				</div>

				<span class="help-block">New to Rally? <a href="/signup">Sign up!</a></span>
				<button type="submit" id="loginButton" class="btn btn-block btn-success">Sign In</button>
			</form>
		</div>
	</div>
</div> <!--./container -->


<p><small>Hint - bob:secret</small></p>
